// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique @db.VarChar(256)
  password  String  @db.VarChar(256)
  firstName String  @db.VarChar(100)
  lastName  String  @db.VarChar(100)
  events    Event[]
  role      String  @db.VarChar(5)
}

model Event {
  id              Int          @id @default(autoincrement())
  title           String       @unique @db.VarChar(100)
  description     String       @db.VarChar(250)
  dateOfEvent     DateTime     @default(now())
  paragraphs      Paragraph[]
  customTags      CustomTag[]
  tags            Tag[]
  multimediaItems Multimedia[]
  user            User?        @relation(fields: [userId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  userId          Int?
}

model Paragraph {
  id      Int     @id @default(autoincrement())
  title   String? @db.VarChar(50)
  text    String  @db.VarChar(5000)
  event   Event   @relation(fields: [eventId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  eventId Int
}

model CustomTag {
  id      Int     @id @default(autoincrement())
  subject String  @unique @db.VarChar(50)
  event   Event[]
}

model Tag {
  id      Int     @id @default(autoincrement())
  subject String  @unique @db.VarChar(50)
  Events  Event[]
}

model Multimedia {
  id          Int     @id @default(autoincrement())
  event       Event   @relation(fields: [eventId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  eventId     Int
  multimedia  String?
  description String? @db.VarChar(1000)
  transcript  String? @db.VarChar(10000)
  alt         String? @db.VarChar(100)
}
